<div class="field">
    <div class="control has-icons-left">
        <div>
            <input class="input" @bind="Filter.SearchTerm" type="search" placeholder="Zoeken...">
        </div>
        <span class="icon is-left">
        <i class="fas fa-search" aria-hidden="true"></i>
        </span>
    </div>
</div>
<div class="field">
    <label class="label has-text-grey">Categorie</label>
    <div class="control is-expanded">
        <div class="select is-fullwidth">
            <InputSelect @bind-Value="Filter.Mode">
                @foreach (var virtualMachineMode in Enum.GetValues(typeof(VirtualMachineMode)))
                {
                    <option value="@virtualMachineMode">@virtualMachineMode</option>
                }
            </InputSelect>
        </div>
    </div>
</div>