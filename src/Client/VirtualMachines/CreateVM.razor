@page "/virtualmachines/add"

<form method="post">
    <h1 class="title is-3">Virtual Machine</h1>
    <h1 class="title is-4">Algemeen</h1>
    <div class="field columns">
        <div class="column">
            <label class="label">Project</label>
            <div class="control is-expanded has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>Project A</option>
                        <option>Project B</option>
                        <option>Project C</option>
                        <option>Project D</option>
                        <option>Project E</option>
                        <option>Project F</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-folder"></i>
                </div>
            </div>
        </div>
        <div class="column">
            <label class="label">Naam</label>
            <p class="control has-icons-left">
                <input name="lastName" class="input" type="text" value="" placeholder="Naam VM">
                <span class="icon is-small is-left">
                    <i class="fas fa-computer"></i>
                </span>
            </p>
        </div>
    </div>
    <div class="field columns">
        <div class="column">
            <label class="label">Hardware Template</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>Geen</option>
                        <option>Klein</option>
                        <option selected>Standaard</option>
                        <option>Groot</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-map"></i>
                </div>
            </div>
        </div>
        <div class="column">
            <label class="label">Backup</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>Geen</option>
                        <option>Dagelijks</option>
                        <option>Wekelijks</option>
                        <option>Maandelijks</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-server"></i>
                </div>
            </div>
        </div>
    </div>
    <h1 class="title is-4">Hardware</h1>
    <div class="field columns">
        <div class="column">
            <label class="label">Besturingssysteem</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>Windows</option>
                        <option>Linux</option>
                        <option>MacOS</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-globe"></i>
                </div>
            </div>
        </div>
        <div class="column">
            <label class="label">RAM</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>4 Gb</option>
                        <option>8 Gb</option>
                        <option>16 Gb</option>
                        <option>32 Gb</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-server"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="field columns">
        <div class="column">
            <label class="label">Opslag</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>64 Gb</option>
                        <option>128 Gb</option>
                        <option>256 Gb</option>
                        <option>512 Gb</option>
                        <option>1024 Gb</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-hard-drive"></i>
                </div>
            </div>
        </div>
        <div class="column">
        <label class="label">CPU's</label>
            <div class="control is-expanded has-icons-left">
                <input class="input has-text-right" type="number" placeholder="1" min="1">
                <span class="icon is-left">
                    <i class="fas fa-microchip"></i>
                </span>
            </div>
        </div>
    </div>
    <h1 class="title is-4">Periode</h1>
    <div class="field columns">
        <div class="column">
            <label class="label">Startdatum</label>
            <div class="control is-expanded has-icons-left">
                <input class="input" type="date">
                <span class="icon is-left">
                    <i class="fas fa-calendar-days"></i>
                </span>
            </div>
        </div>
        <div class="column">
            <label class="label">Einddatum</label>
            <div class="control is-expanded has-icons-left">
                <input class="input" type="date">
                <span class="icon is-left">
                    <i class="fas fa-calendar-days"></i>
                </span>
            </div>
        </div>
        <div class="column">
            <label class="label">Beschikbaarheid</label>
            <div class="control has-icons-left">
                <div class="select is-primary is-fullwidth">
                    <select>
                        <option>9u - 17u</option>
                        <option>24/7</option>
                    </select>
                </div>
                <div class="icon is-small is-left">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>
    </div>
    <button class="button is-rechts is-success" type="submit">
        <span class="icon is-small">
          <i class="fas fa-check"></i>
        </span>
        <span>Virtual Machine aanvragen</span>
    </button>
</form>

@code {
    public Boolean isTemplate { get; set; } = false;

    public void toggleTemplate()
    {
        isTemplate = !isTemplate;
    }

}